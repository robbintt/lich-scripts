custom_require.call(%w[drinfomon common util_methods combat_methods weapon_swap])

# mandatory for many things including hide?
include DRC

include UtilMethods
include WeaponSwap
include Combat

def attack
  while !mobs?
    pause 2
  end
  advance
  feint
  feint
  feint
  cleanup
end

def ambush
  while !mobs?
    pause 2
  end
  advance
  ambush_attack
  ambush_attack
  ambush_attack
  cleanup
end

def offhand
  while !mobs?
    pause 2
  end
  advance
  feint_left
  feint_left
  feint_left
  cleanup
end

def lob_etc
  while !mobs?
    pause 2
  end
  lob
  cleanup
end

def missile_etc
  load
  aim
  pause 8
  fire
  cleanup
  # this will face next, which is important for aiming
  while !mobs?
    pause 2
  end
end

